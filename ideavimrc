let mapleader=','
nmap <leader>w <C-W>k
nmap <leader>s <C-W>j
nmap <leader>a <C-W>h
nmap <leader>d <C-W>l

nmap <leader>o :action FileStructurePopup<CR>
nmap <leader>r :action GotoFile<CR>
nmap <leader>t :action GotoClass<CR>
nmap <leader>c :action GotoImplementation<CR>
nmap <leader>n :action NextTab<CR>
nmap <leader>h :action HideSideWindows<CR>
nmap <leader>p :action PreviousTab<CR>
nmap <leader>q :action ActivateProjectToolWindow<CR>
nmap <leader>z :action ActivateDebugToolWindow<CR>

